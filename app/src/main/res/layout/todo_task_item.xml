<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
                name="task"
                type="com.example.sapir.todoapplication.Task"/>
    </data>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/rl_delete_item"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="@android:color/holo_red_dark">
            <ImageView
                    android:id="@+id/img_menu_delete"
                    style="@style/wrap_content"
                    android:contentDescription="@string/trash"
                    tools:backgroundTint="@android:color/background_light"
                    app:srcCompat="@android:drawable/ic_menu_delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"/>
            <TextView
                    android:text="@string/delete"
                    style="@style/wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:id="@+id/tv_delete"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="124dp"
            />
        </android.support.constraint.ConstraintLayout>
        <android.support.constraint.ConstraintLayout
                android:id="@+id/rl_task_item"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="@android:color/background_light">

            <CheckBox
                    style="@style/wrap_content"
                    android:checked="@={task.checked}"
                    android:id="@+id/cb_task"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <TextView
                    android:id="@+id/tv_title"
                    style="@style/wrap_content"
                    tools:text="@string/title_hint"
                    android:text="@={task.title}"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginStart="44dp"
                    android:layout_marginBottom="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cb_task"

            />
            <TextView
                    android:id="@+id/tv_description"
                    style="@style/wrap_content"
                    android:text="@={task.description}"
                    tools:text="@string/task_description_hint"
                    android:layout_marginStart="44dp"
                    app:layout_constraintTop_toTopOf="@id/tv_create_time"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cb_task"
            />
            <TextView
                    tools:text="@string/create_time_hint"
                    style="@style/wrap_content"
                    android:id="@+id/tv_create_time"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/cb_task"
                    android:layout_marginStart="44dp"
                    android:layout_marginBottom="8dp"
            />
        </android.support.constraint.ConstraintLayout>


    </RelativeLayout>
</layout>